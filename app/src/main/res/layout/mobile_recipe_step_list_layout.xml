<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--INFO TO SHOW(RECIPE INGREDIENTS, STEPS AND SHORT DESCRIPTION)-->

    <TextView
        android:id="@+id/ingred_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingred_list_label"
        android:padding="16dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recipe_ingredients_list"/>

    <View style="@style/Divider"/>

    <!--RECIPE INGREDIENTS-->
    <include android:id="@+id/recipe_ingredients_list"
        layout="@layout/contain_main"
        app:layout_constraintTop_toBottomOf="@id/ingred_label"/>

    <View style="@style/Divider"/>

</LinearLayout>